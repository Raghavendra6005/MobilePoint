@model MobileRepairShop.Models.User

<div class="login-container">
    <div class="login-card">
        <div class="login-header">
            <h2>Welcome Back</h2>
            <p>Sign in to continue</p>
        </div>
        <div class="login-body">
            <form asp-action="Login" method="post">
                <div asp-validation-summary="ModelOnly" class="validation-summary"></div>

                <div class="form-field">
                    <label asp-for="Email">Email Address</label>
                    <div class="input-container">
                        <i class="fas fa-envelope"></i>
                        <input asp-for="Email" placeholder="Enter your email" />
                    </div>
                    <span asp-validation-for="Email" class="field-validation"></span>
                </div>

                <div class="form-field">
                    <label asp-for="Password">Password</label>
                    <div class="input-container">
                        <i class="fas fa-lock"></i>
                        <input asp-for="Password" type="password" placeholder="Enter your password" />
                    </div>
                    <span asp-validation-for="Password" class="field-validation"></span>
                </div>

                <div class="form-options">
                    <label class="remember-me">
                        <input type="checkbox" />
                        <span>Remember me</span>
                    </label>
                    <a href="#" class="forgot-password">Forgot Password?</a>
                </div>

                <button type="submit" class="login-button">Sign In</button>
            </form>

            <div class="register-link">
                <p>Don't have an account? <a asp-action="Register">Create Account</a></p>
            </div>
        </div>
    </div>
</div>

<style>
    .login-container {
        min-height: 100vh;
        display: flex;
        align-items: center;
        justify-content: center;
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        padding: 20px;
    }

    .login-card {
        width: 100%;
        max-width: 420px;
        background: rgba(255, 255, 255, 0.95);
        border-radius: 20px;
        box-shadow: 0 15px 35px rgba(0, 0, 0, 0.2);
        backdrop-filter: blur(10px);
        transition: transform 0.3s ease;
    }

        .login-card:hover {
            transform: translateY(-5px);
        }

    .login-header {
        padding: 30px;
        text-align: center;
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        border-radius: 20px 20px 0 0;
        color: white;
    }

        .login-header h2 {
            margin: 0;
            font-size: 28px;
            font-weight: 700;
        }

        .login-header p {
            margin: 10px 0 0;
            opacity: 0.9;
            font-size: 16px;
        }

    .login-body {
        padding: 30px;
    }

    .form-field {
        margin-bottom: 25px;
    }

        .form-field label {
            display: block;
            margin-bottom: 8px;
            font-weight: 600;
            color: #374151;
        }

    .input-container {
        position: relative;
        display: flex;
        align-items: center;
    }

        .input-container i {
            position: absolute;
            left: 15px;
            color: #6B7280;
        }

        .input-container input {
            width: 100%;
            padding: 12px 15px 12px 45px;
            border: 2px solid #E5E7EB;
            border-radius: 12px;
            font-size: 15px;
            transition: all 0.3s ease;
        }

            .input-container input:focus {
                border-color: #667eea;
                box-shadow: 0 0 0 4px rgba(102, 126, 234, 0.1);
                outline: none;
            }

    .form-options {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-bottom: 25px;
    }

    .remember-me {
        display: flex;
        align-items: center;
        gap: 8px;
        color: #4B5563;
        cursor: pointer;
    }

    .forgot-password {
        color: #667eea;
        text-decoration: none;
        font-weight: 500;
        transition: color 0.3s ease;
    }

        .forgot-password:hover {
            color: #764ba2;
        }

    .login-button {
        width: 100%;
        padding: 14px;
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        border: none;
        border-radius: 12px;
        color: white;
        font-size: 16px;
        font-weight: 600;
        cursor: pointer;
        transition: all 0.3s ease;
    }

        .login-button:hover {
            opacity: 0.9;
            transform: translateY(-2px);
            box-shadow: 0 5px 15px rgba(102, 126, 234, 0.4);
        }

    .register-link {
        text-align: center;
        margin-top: 25px;
        color: #4B5563;
    }

        .register-link a {
            color: #667eea;
            text-decoration: none;
            font-weight: 600;
            transition: color 0.3s ease;
        }

            .register-link a:hover {
                color: #764ba2;
            }

    .validation-summary {
        color: #DC2626;
        font-size: 14px;
        margin-bottom: 20px;
    }

    .field-validation {
        color: #DC2626;
        font-size: 13px;
        margin-top: 5px;
        display: block;
    }
</style>