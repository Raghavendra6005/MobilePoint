@model MobileRepairShop.Models.User

<div class="register-container">
    <div class="register-card">
        <div class="register-header">
            <h2>Create Account</h2>
            <p>Join our community today</p>
        </div>
        <div class="register-body">
            <form asp-action="Register" method="post">
                <div asp-validation-summary="ModelOnly" class="validation-summary"></div>

                <div class="form-field">
                    <label asp-for="FullName">Full Name</label>
                    <div class="input-container">
                        <i class="fas fa-user"></i>
                        <input asp-for="FullName" placeholder="Enter your full name" />
                    </div>
                    <span asp-validation-for="FullName" class="field-validation"></span>
                </div>

                <div class="form-field">
                    <label asp-for="Email">Email Address</label>
                    <div class="input-container">
                        <i class="fas fa-envelope"></i>
                        <input asp-for="Email" placeholder="Enter your email" />
                    </div>
                    <span asp-validation-for="Email" class="field-validation"></span>
                </div>

                <div class="form-field">
                    <label asp-for="Password">Password</label>
                    <div class="input-container">
                        <i class="fas fa-lock"></i>
                        <input asp-for="Password" type="password" placeholder="Create a password" />
                    </div>
                    <span asp-validation-for="Password" class="field-validation"></span>
                </div>

                

                <div class="terms-container">
                    <label class="terms-checkbox">
                        <input type="checkbox" required />
                        <span>I agree to the <a href="#">Terms of Service</a> and <a href="#">Privacy Policy</a></span>
                    </label>
                </div>

                <button type="submit" class="register-button">Create Account</button>
            </form>

            <div class="login-link">
                <p>Already have an account? <a asp-action="Login">Sign In</a></p>
            </div>
        </div>
    </div>
</div>

<style>
    .register-container {
        min-height: 100vh;
        display: flex;
        align-items: center;
        justify-content: center;
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        padding: 20px;
    }

    .register-card {
        width: 100%;
        max-width: 480px;
        background: rgba(255, 255, 255, 0.95);
        border-radius: 20px;
        box-shadow: 0 15px 35px rgba(0, 0, 0, 0.2);
        backdrop-filter: blur(10px);
        transition: transform 0.3s ease;
    }

        .register-card:hover {
            transform: translateY(-5px);
        }

    .register-header {
        padding: 30px;
        text-align: center;
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        border-radius: 20px 20px 0 0;
        color: white;
    }

        .register-header h2 {
            margin: 0;
            font-size: 28px;
            font-weight: 700;
        }

        .register-header p {
            margin: 10px 0 0;
            opacity: 0.9;
            font-size: 16px;
        }

    .register-body {
        padding: 30px;
    }

    .form-field {
        margin-bottom: 25px;
    }

        .form-field label {
            display: block;
            margin-bottom: 8px;
            font-weight: 600;
            color: #374151;
        }

    .input-container {
        position: relative;
        display: flex;
        align-items: center;
    }

        .input-container i {
            position: absolute;
            left: 15px;
            color: #6B7280;
        }

        .input-container input {
            width: 100%;
            padding: 12px 15px 12px 45px;
            border: 2px solid #E5E7EB;
            border-radius: 12px;
            font-size: 15px;
            transition: all 0.3s ease;
        }

            .input-container input:focus {
                border-color: #667eea;
                box-shadow: 0 0 0 4px rgba(102, 126, 234, 0.1);
                outline: none;
            }

    .terms-container {
        margin-bottom: 25px;
    }

    .terms-checkbox {
        display: flex;
        align-items: center;
        gap: 8px;
        color: #4B5563;
        cursor: pointer;
    }

        .terms-checkbox a {
            color: #667eea;
            text-decoration: none;
            font-weight: 500;
            transition: color 0.3s ease;
        }

            .terms-checkbox a:hover {
                color: #764ba2;
            }

    .register-button {
        width: 100%;
        padding: 14px;
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        border: none;
        border-radius: 12px;
        color: white;
        font-size: 16px;
        font-weight: 600;
        cursor: pointer;
        transition: all 0.3s ease;
    }

        .register-button:hover {
            opacity: 0.9;
            transform: translateY(-2px);
            box-shadow: 0 5px 15px rgba(102, 126, 234, 0.4);
        }

    .login-link {
        text-align: center;
        margin-top: 25px;
        color: #4B5563;
    }

        .login-link a {
            color: #667eea;
            text-decoration: none;
            font-weight: 600;
            transition: color 0.3s ease;
        }

            .login-link a:hover {
                color: #764ba2;
            }

    .validation-summary {
        color: #DC2626;
        font-size: 14px;
        margin-bottom: 20px;
    }

    .field-validation {
        color: #DC2626;
        font-size: 13px;
        margin-top: 5px;
        display: block;
    }
</style>