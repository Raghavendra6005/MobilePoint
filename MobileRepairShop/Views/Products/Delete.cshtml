@model MobileRepairShop.Models.Product

@{
    ViewData["Title"] = "Delete Product";
}

@* Add Bootstrap CSS if it's not already included in your project *@
<link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow-sm">
                <div class="card-header text-white bg-danger">
                    <h3 class="mb-0">Delete Product</h3>
                </div>
                <div class="card-body">
                    <h4 class="text-center text-danger">Are you sure you want to delete this product?</h4>
                    <hr>
                    <h5 class="text-muted">Product Details</h5>

                    <div class="list-group mb-4">
                        <div class="list-group-item">
                            <strong>Name: </strong>@Model.Name
                        </div>
                        <div class="list-group-item">
                            <strong>Description: </strong>@Model.Description
                        </div>
                        <!-- Add more fields here if necessary -->
                    </div>

                    <form method="post">
                        <div class="d-flex justify-content-between">
                            <button type="submit" class="btn btn-danger btn-lg">Delete</button>
                            <a href="@Url.Action("Index")" class="btn btn-secondary btn-lg">Cancel</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@* Optional: Add some additional custom styling *@
<style>
    .card-header {
        font-weight: bold;
        font-size: 1.5rem;
    }

    .list-group-item {
        font-size: 1.1rem;
        padding: 15px;
    }

    .btn {
        font-size: 1.2rem;
        padding: 10px 20px;
    }

    .card-body {
        font-family: 'Arial', sans-serif;
    }

    .text-muted {
        font-size: 1.2rem;
    }
</style>
