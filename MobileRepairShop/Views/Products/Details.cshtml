@model Product

<!DOCTYPE html>
<html>
<head>
    <style>
        body {
            font-family: 'Arial', sans-serif;
            background-color: #f4f4f4;
            margin: 0;
            padding: 0;
        }

        .primary-container {
            max-width: 600px;
            margin: 20px auto;
            padding: 20px;
            background: #fff;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        }

        .product-details img {
            width: 100%;
            height: auto;
            border-radius: 10px;
        }

        .product-details h3 {
            margin-top: 15px;
            font-size: 24px;
            color: #333;
        }

        .product-details p {
            margin: 10px 0;
            color: #777;
        }

        .back-button {
            padding: 10px 20px;
            background: #007bff;
            color: #fff;
            border: none;
            border-radius: 5px;
            cursor: pointer;
        }
    </style>
</head>
<body>
    <div class="primary-container">
        <div class="product-details">
            <img src="@Model.PhotoUrl" alt="@Model.Name" />
            <h3>@Model.Name</h3>
            <p>@Model.Description</p>
            <p>Total Items: @Model.TotalItems</p>
            <p>Available Items: @Model.AvailableItems</p>
            <p>Sold Items: @Model.SoldItems</p>
            <button class="back-button" onclick="history.back()">Back</button>
        </div>
    </div>
</body>
</html>